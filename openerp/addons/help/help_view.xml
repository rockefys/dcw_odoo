<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <!--定义表单视图-->
        <record model="ir.ui.view" id="wms_help_form_view">
            <field name="name">帮助中心表单</field>
            <field name="type">form</field>
            <field name="model">wms.help</field>
            <field name="arch" type="xml">
                <form string="用户中心表单" version="7.0">
                  <group>
                    <field name="title"/>
                    <field name="date_create"/>
                    <field name="content"/>
                 </group>
                </form>
            </field>
        </record>
        <!--定义列表视图-->
        <record model="ir.ui.view" id="wms_help_tree_view">
            <field name="name">帮助中心列表</field>
            <field name="type">tree</field>
            <field name="model">wms.help</field>
            <field name="arch" type="xml">
                <tree string="帮助中心列表" version="7.0">
                    <field name="title"/>
                    <field name="date_create"/>
                    <field name="content"/>
                </tree>
            </field>
        </record>
<!--定义视图动作-->
    <record model="ir.actions.act_window"  id="action_wms_help">
        <field name="name">帮助中心</field>
        <field name="res_model">wms.help</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="wms_help_tree_view"/>
    </record>
<!--定义菜单-->
    <menuitem id="wms_help_menu" name="HELP"/>
    <menuitem id="wms_help_purchase_menu" name="采购" parent="wms_help_menu"/>
    <menuitem id="wms_help_purchase_test_menu" name="规定" parent="wms_help_purchase_menu" action="action_wms_help"/>   
</data>
</openerp>

