<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <!--定义表单视图-->
        <record model="ir.ui.view" id="wms_help_form_view">
            <field name="name">wms.help.form</field>
            <field name="type">form</field>
            <field name="model">wms.help</field>
            <field name="arch" type="xml">
                <form string="wms.help.form" version="7.0">
                  <group>
                    <field name="title"/>
                    <field name="date_upd"/>
                    <field name="content"/>
		    <field name="author"/>
		    <field name="type"/>
                 </group>
                </form>
            </field>
        </record>
        <!--定义列表视图-->
        <record model="ir.ui.view" id="wms_help_tree_view">
            <field name="name">wms.help.tree</field>
            <field name="type">tree</field>
            <field name="model">wms.help</field>
            <field name="arch" type="xml">
                <tree string="wms.help.tree" version="7.0">
                    <field name="title"/>
                    <field name="date_upd"/>
		    <field name="author"/>
                </tree>
            </field>
        </record>
